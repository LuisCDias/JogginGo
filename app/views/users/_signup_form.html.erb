<%= form_for(@user, :html => { :class => "form-signin center"}) do |f| %>

	<%= f.text_field :username, 
	:placeholder => "Your username", :class => "input-block-level" %>
	<%#= div_with_errors(:name, @user) %>
	<%= f.text_field :name, 
	:placeholder => "Your full name", :class => "input-block-level" %>

	<%#= div_with_errors(:email, @user) %>
	<%= f.text_field :email,
	:placeholder => "Your email",:class => "input-block-level"%>

	<%#= div_with_errors(:password, @user) %>
	<%= f.password_field :password,
	:placeholder => "Your password (minimum 6 chars)",
	:class => "input-block-level"%>

	<%#= div_with_errors(:password_confirmation, @user) %>
	<%= f.password_field :password_confirmation,
	:placeholder => "Confirm your password",:class => "input-block-level"%>

	<%= f.submit 'Sign up now!', :class => 'btn btn-large btn-primary'%>
<% end %>