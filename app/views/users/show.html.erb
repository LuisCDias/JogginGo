<div class="container profile">
	
	<h1>
		<%= gravatar_for @user, size: 150 %>
		<%= @user.username %>'s profile
	</h1>
	<div class="row">
		<div class="span6 offset3">
			<h2> My tracks </h2>				
			<%= gmaps({ direction: {
							data: { from: @first, to: @last},
							options: { travelMode: "WALKING", waypoints: @waypoints }}
						})%>				
		</div>
		<div class="span3 times">
			<h2> My times <%= @all  %></h2>
		</div>
	</div>
	<div class="row">
		<div class="span6 offset3">
			<% if !@tracks.nil? %>
				<%= render 'tracks/track', tracks: @tracks %>
			<% end %>
		</div>
	</div>
</div>
