<div class="container profile">
	
	<h1>
		<%= gravatar_for @user, size: 150 %>
		<%= @user.username %>'s profile
	</h1>
	<div class="row">
		<div class="span6 offset3">				
			<%= gmaps({ direction: {
							data: { from: @first, to: @last},
							options: { travelMode: "WALKING", waypoints: @waypoints }}
						})%>				
		</div>
		<div class="span3 times">
			<h2> My times <%= @all  %></h2>
		</div>
	</div>
	<div class="row">
		<div class="span6 offset3 track">
			<% if !@tracks.nil? %>
				<%= render 'tracks/track', tracks: @tracks %>
			<% end %>
		</div>
	</div>
	<div>
		<%= link_to 'Mobiless', mobile_path(track:"{\"approved\":true,\"city\":\"Porto\",\"country\":\"Portugal\",\"id\":1,\"name\":\"Trilho lindos\",\"private\":true,\"user_id\":1}")
		%>
		<% json = "{\"approved\":true,\"city\":\"Porto\",\"country\":\"Portugal\",\"id\":1,\"name\":\"Trilho lindos\",\"private\":true,\"user_id\":1}"
		%>
		<%= button_to("coiso", mobile_path(:track => json))%>
	</div>
</div>
