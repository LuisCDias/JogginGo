<div class="container profile">
	
	<h1>
		<%= gravatar_for @user, size: 150 %>
		<%= @user.username %>'s profile
	</h1>
	<div class="row">
		<div class="span6 offset3">
			<h2> My tracks </h2>
			<div class="map">
				<!-- placeholder for now -->
				<% wayp = Array.new %>
				<% if !@waypoints.nil? %>
					<% @waypoints.each do |way|
						wayp.push way.address
					end 
					%>
				<% end %>
				<%= 
					gmaps({ "direction" => {
							    "data" => { "from" => @first,"to" => @last},
					 			"options" => { "travelMode" => "WALKING", "waypoints" => wayp},
						      }
					      })
			 	%>

			</div>
		</div>
		<div class="span3 times">
			<h2> My times <%= @all  %></h2>
		</div>
	</div>

</div>
