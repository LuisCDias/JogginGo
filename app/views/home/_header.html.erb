<div class="navbar navbar-inverse navbar-fixed-top" >
  <div class="navbar-inner">
    <div class="container">
      <!-- Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to("JogginGo!", root_path, id: "logo") %>

      <!-- Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse. -->
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li><a id="about">About</a></li>
          <li><%= link_to "Members", users_path %></li>
          <!-- Read about Bootstrap dropdowns at http://twitter.github.com/bootstrap/javascript.html#dropdowns -->
        </ul>
        <% if !signed_in? %>
          <%= form_for(:session, url: signin_path, :html => { :class => "navbar-form pull-right" }) do |f| %>
          <%= f.text_field :email, :placeholder => "Email",:class => "span2"%>
          <%= f.password_field :password, :placeholder => "Password", :class => "span2"%>
          <%= f.submit 'Sign in', :class => 'btn'%>
          <% end %>
        <% else %>
          <ul class="nav pull-right">
            <li><%= link_to "Home", root_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=current_user.username %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", profile_path %></li>
                <li><%= link_to "Settings", settings_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Signout", signout_path, method: "delete" %></li>
              </ul>
            </li>
          </ul>
        <% end %>

      </div><!--/.nav-collapse -->
    </div><!-- /.navbar-inner -->
  </div><!-- /.navbar -->
</div> <!-- /.container -->

