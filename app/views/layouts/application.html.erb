<!DOCTYPE html>
<html>
<head>
  <title><%= titulo @title %></title>

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
      <![endif]-->
    </head>

    <body>
     <%= render 'home/header' %>
     <%= yield %>
     <!-- <%= debug(params) if Rails.env.development? %> -->
     <%= render 'home/footer'%>

     <!-- Javascripts nices-->
     <script>
     !function ($) {
      $(function(){
          // carousel demo
          $('#myCarousel').carousel()
        })
    }(window.jQuery)
    </script>
    <script>
    $(document).ready(function (){
      $("#limit_button").click(function (){
              $('html, body').animate({
                scrollTop: $("#limit").offset().top
              }, 2000);
    });
      $("#to_top").click(function (){
              $('html, body').animate({
                scrollTop: $("#top").offset().top
              }, 2000);
    });
    });
    </script>
  </body>
  </html>
